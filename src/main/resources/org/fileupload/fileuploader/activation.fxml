<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.fileupload.fileuploader.ActivationController"
      alignment="CENTER" spacing="15.0" style="-fx-background-color: #f5f7fa;"
      prefWidth="400" prefHeight="300">

    <padding>
        <Insets top="25.0" right="30.0" bottom="25.0" left="30.0"/>
    </padding>

    <Label text="Activate Your Software" styleClass="header-label">
        <font>
            <Font name="System Bold" size="20.0"/>
        </font>
    </Label>

    <Separator prefWidth="350.0"/>

    <Label text="Enter your activation code:" style="-fx-font-size: 14px;"/>

    <TextField fx:id="activationCodeField" promptText="XXXX-XXXX-XXXX-XXXX"
               style="-fx-font-size: 16px; -fx-pref-width: 300px;"/>

    <Label fx:id="errorLabel" style="-fx-text-fill: #d32f2f; -fx-font-size: 12px;"
           visible="false" managed="false"/>

    <HBox spacing="15.0" alignment="CENTER">
        <Button text="Activate" onAction="#handleActivation"
                style="-fx-background-color: #4a6baf; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 25;"/>
        <Button text="Try Demo" onAction="#handleDemoMode"
                style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 25;"/>
    </HBox>

    <stylesheets>
        <URL value="@/styles.css"/>
    </stylesheets>
</VBox>